{
  "name": "node-typescript-api",
  "version": "1.0.0",
  "description": "Typescript Node.JS API",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "yarn build && node dist/src/index.js",
    "start:dev": "ts-node-dev 'src/index.ts'",
    "test:functional": "jest --projects ./test --runInBand",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "api"
  ],
  "author": "Jackson de Almeida",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^17.0.29",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "jest": "^28.0.2",
    "supertest": "^6.2.3",
    "ts-jest": "^27.1.4",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "eslint": "^8.14.0",
    "module-alias": "^2.2.2"
  },
  "repository": "https://github.com/JacksonDeAlmeida/node-typescript-api.git"
}
